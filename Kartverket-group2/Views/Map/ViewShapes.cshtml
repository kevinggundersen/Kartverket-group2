@model List<Kartverket_group2.Models.Shape>

@{
    ViewData["Title"] = "View Shapes";
}

<h2>Shape Data</h2>

@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var shape in Model)
        {
            <li>
                <strong>ID:</strong> @shape.Id <br />
                <strong>Type:</strong> @shape.Type <br />
                <strong>Coordinates:</strong> @shape.Coordinates <br />
                <strong>Comment:</strong> @shape.Comment <br />
            </li>
        }
    </ul>
}
else
{
    <p>No shape data available.</p>
}
